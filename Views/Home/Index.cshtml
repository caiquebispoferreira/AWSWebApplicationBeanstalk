@{
    ViewData["Title"] = "Home Page";
}

<form asp-area="" asp-controller="Home" asp-action="Index">
    <div class="form-group">
        <label for="userEmail">Email address</label>
        <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="userPassword">Password</label>
        <input type="password" class="form-control" id="userPassword">
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary col-md-6">Submit</button>
        <button type="button" asp-controller="Home" asp-action="Registration" class="btn btn-primary col-md-6">Sign Up</button>
    </div>
   
</form>
