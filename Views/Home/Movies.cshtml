@model UserXMovies
@{
    ViewData["Title"] = "Movies";
}

<h2>Movies</h2>

<p>
    <a asp-action="Create">Welcome @Html.DisplayNameFor(model => model.User.Name)</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id<th>
            <th>Title<th>
            <th>#<th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

